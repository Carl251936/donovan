{
  "name": "donovan",
  "version": "1.0.0",
  "description": "Donovan WordPress Theme",
  "main": "gulpfile.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
	"export": "git archive HEAD -9 --prefix donovan/ --format=zip > ../../donovan.zip"
  },
  "repository": {
    "type": "git",
    "url": "git+https://ThemeZee@bitbucket.org/ThemeZee/donovan.git"
  },
  "author": "ThemeZee",
  "license": "GPL-3.0",
  "homepage": "https://bitbucket.org/ThemeZee/donovan#readme",
  "devDependencies": {
    "autoprefixer": "^8.6.1",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-postcss": "^7.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.6.1",
    "gulp-rtlcss": "^1.2.0",
    "gulp-sass": "^4.0.1",
    "gulp-stylelint": "^5.0.0",
    "gulp-uglify": "^3.0.0",
    "postcss-sorting": "^3.1.0",
    "postcss-wprtl": "^1.2.1",
    "stylelint-config-wordpress": "^12.0.0"
  },
  "stylelint": {
    "extends": [
		"stylelint-config-wordpress",
		"stylelint-config-wordpress/scss"
    ],
    "rules": {
	  "indentation": "tab",
	  "no-descending-specificity": null,
	  "font-weight-notation": "named-where-possible",
	  "rule-empty-line-before": [ "always", {
		"ignore": [
		  "first-nested",
		  "after-comment"
		]
	  } ],
	  "at-rule-empty-line-before": [ "always", {
		"except": [
		  "inside-block"
		],
		"ignore": [
			"after-comment",
			"blockless-after-same-name-blockless"
		  ]
	  } ]
    }
  },
  "dependencies": {}
}
